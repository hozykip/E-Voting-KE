@using E_Vote_System.Models;
@model E_Vote_System.Models.ElectionPositionModel



@{
    ViewBag.Title = "Create an election position";
    ViewBag.PageTitle = "Create an election position";
    ViewBag.PageSubTitle = "Election position Form";

    ElectionModel election = ViewBag.Election as ElectionModel;
}


@section BreadCrumbs{

    <li class="breadcrumb-item">
        @Html.ActionLink("Dashboard", "Dashboard", "Home")
    </li>
    <li class="breadcrumb-item">
        @Html.ActionLink("Election positions List", "Index", "ElectionPositionModels", new { id = election.Id })
    </li>
    <li class="breadcrumb-item">
        <a href="#">@ViewBag.Title</a>
    </li>
}


<div class="card">
    <div class="card-header">
        <h5>@ViewBag.Title</h5>

        <span>Election form</span>
    </div>
    <div class="card-block table-border-style">

        @using (Html.BeginForm("Create", "ElectionPositionModels", new { id = election.Id }, FormMethod.Post, htmlAttributes: new { @class = "form-inline" }))
        {



            @Html.AntiForgeryToken()
            @Html.Hidden("Model.ElectionId", election.Id)
            

            <div class="form-group mx-sm-3 mb-2">
                @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "mr-2" })
                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
            </div>



            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
            </div>
        }


        <hr class="mt-3" />
        <div class="d-flex justify-content-start">
            <a href="@Url.Action("Index", new { id = election.Id })" class="btn btn-sm btn-outline-dark">
                <i class="fa fa-list-ol"></i>
                Back to List
            </a>
        </div>

    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



