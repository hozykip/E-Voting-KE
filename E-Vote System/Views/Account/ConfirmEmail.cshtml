@using E_Vote_System.Models
@{
    ViewBag.Title = "Confirm your account";
    Layout = "~/Views/Shared/_MaterialableLogin.cshtml";
}



@section Styles{
    <style>
        .auth-box {
            max-width: unset !important;
        }
    </style>
}

<div class="reg_form_container">
    @using (Html.BeginForm("ConfirmEmail", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "md-float-material form-material RegistrationForm", role = "form", @id = "RegistrationFormComplete" }))
    {

        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <input type="hidden" name="userId" value="@ViewBag.userId"/>


        <div class="text-center">
            <img src="/Content/imgs/logo.png" alt="logo.png">
        </div>
        <div class="auth-box card">

            <div class="card-block">
                <div class="row m-b-20">
                    <div class="col-md-12">
                        <h3 class="text-center text-uppercase">@ViewBag.Title</h3>
                        <p>Account Confirmation.</p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>


                <hr />

                <div class="row">
                    <div class="col">
                        <div class="form-group form-primary">
                            <label>Enter Code</label>
                            <input type="text" name="code" value="" required class="form-control" />
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col d-flex justify-content-end">
                        <button class="btn btn-danger">Verify Code</button>
                    </div>
                </div>


                <hr />
                <div class="row">
                    <div class="col-md-10">
                        <p class="text-inverse text-left m-b-0">Thank you.</p>
                        <p class="text-inverse text-left"><a href="@Url.Action("Login","Account")"><b>Back to website</b></a></p>
                    </div>
                    <div class="col-md-2">
                        <img src="/Content/Materialable/assets/images/auth/Logo-small-bottom.png" alt="small-logo.png">
                    </div>
                </div>


            </div>

        </div>
    }

</div>










@section Scripts{
    <script>

        

    </script>
}






