@model List<E_Vote_System.Models.ElectionCandidateModel>


@if (Model != null)
{

    foreach (var candidate in Model)
    {

        string candidatePhoto = $"{Configs.DocumentsUrl}{candidate.ProfilePicture}";

        <div class="col-md-4 py-1 px-3 candidate_card" data-candidate-id="@candidate.Id" data-position-id="@candidate.PositionId">

            <div class="card" style="">
                <img src="@candidatePhoto" class="card-img-top" style="height: 200px">
                <div class="card-body">
                    <h6 class="card-title">@candidate.FullName</h6>
                    <p class="card-text">@candidate.EmailAddress</p>
                    <p class="card-text">@candidate.PhoneNumber</p>
                </div>

                <div class="card-footer border-top">
                    <div class="row">
                        <div class="col-6"">
                            <span class="text-muted">Votes</span>
                        </div>
                        <div class="col-6 d-flex justify-content-end candidate_votes_count font-weight-bold" data-dandidate-id="@candidate.Id">0</div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6"">
                            <span class="text-muted">Percentage</span>
                        </div>
                        <div class="col-6 d-flex justify-content-end candidate_votes_perc font-weight-bold text-c-purple" data-dandidate-id="@candidate.Id">0%</div>
                    </div>

                </div>

            </div>
        </div>

        
    }

}
else
{
    <div class="alert alert-danger">No candidates for this position</div>
}